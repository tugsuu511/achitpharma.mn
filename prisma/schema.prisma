generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String?  @unique
  passwordHash String?
  role         String   @default("USER")
  createdAt    DateTime @default(now())

  accounts Account[]
  sessions Session[]
  orders   Order[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  access_token      String?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

/**
 * Захиалга *
 */
model Product {
  id        String   @id @default(cuid())
  name      String
  sku       String   @unique
  priceMnt  Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  items OrderItem[]
}

enum OrderStatus {
  NEW
  CONFIRMED
  SHIPPED
  CANCELLED
}

model Order {
  id        String      @id @default(cuid())
  userId    String?
  name      String
  phone     String
  address   String?
  status    OrderStatus @default(NEW)
  note      String?
  totalMnt  Int
  createdAt DateTime    @default(now())

  user  User?       @relation(fields: [userId], references: [id])
  items OrderItem[]
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String
  qty       Int
  priceMnt  Int

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])
}
